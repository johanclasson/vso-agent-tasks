    "instanceNameFormat": "DbUp Migration",
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\Update-Database.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
